{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/harrietspence/harrietspence.github.io/main/US_income_firearms.csv"
  },
  "title": {
    "text": "Firearm Mortality Rates and Income",
    "fontSize": 22,
    "subtitle": ["Sources: Bureau of Economic Analysis (BEA) &", "Centers for Disease Control and Preventionthe (CDC)"],
    "subtitleFontStyle": "italic",
    "subtitlePadding": 8,
    "subtitleFontSize": 16,
    "anchor": "middle",
    "color": "black"
  },
  "params": [
    {
      "name": "yearSelector",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2020,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "transform": [{"filter": "datum.Year == yearSelector"}],
  "height": 450,
  "width": 450,
  "background": null,
  "view": {"stroke": "transparent"},
  "layer": [
    {
      "selection": {
        "picked": {
          "empty": "none",
          "bind": {
            "State": {
              "input": "select",
              "options": [ 
                "Null", 
                "Alabama", 
                "Alaska", 
                "Arizona", 
                "Arkansas", 
                "California",
                "Colorado", 
                "Connecticut", 
                "Delaware",
                "Florida", 
                "Georgia", 
                "Hawaii", 
                "Idaho",
                "Illinois", 
                "Indiana", 
                "Iowa", 
                "Kansas",
                "Kentucky", 
                "Louisiana", 
                "Maine", 
                "Maryland", 
                "Massachusetts", 
                "Michigan", 
                "Minnesota",  
                "Mississippi", 
                "Missouri", 
                "Montana", 
                "Nebraska", 
                "Nevada", 
                "New Hampshire", 
                "New Jersey", 
                "New Mexico", 
                "New York", 
                "North Carolina", 
                "North Dakota", 
                "Ohio", 
                "Oklahoma", 
                "Oregon", 
                "Pennsylvania", 
                "Puerto Rico", 
                "Rhode Island", 
                "South Carolina", 
                "South Dakota", 
                "Tennessee", 
                "Texas", 
                "Utah", 
                "Vermont", 
                "Virginia", 
                "Washington", 
                "West Virginia", 
                "Wisconsin", 
                "Wyoming"
                ],
         "name": "Select a State: ",
          "fontStyle": "Arial"}
          },
          "type": "single",
          "fields": ["State"]
        }
      },
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "x": {
          "field": "Per capita personal income",
          "type": "quantitative",
          "title": "Per capita personal income",
          "scale": {"domain": [30000, 80000]},
          "axis": {
            "labelFontSize": 14,
            "tickCount": 8,
            "tickWidth": 1,
            "ticks": true,
            "tickOpacity": 0.7,
            "gridOpacity": 0.8,
            "titleFontSize": 14,
            "titleFontWeight": "bold"
          }
        },
        "y": {
          "field": "Firearm Mortality rate",
          "type": "quantitative",
          "title": "Firearm Mortality rate",
          "scale": {"domain": [0, 30]},
          "axis": {
            "labelFontSize": 14,
            "tickCount": 8,
            "tickWidth": 1,
            "ticks": true,
            "tickOpacity": 0.7,
            "gridOpacity": 0.8,
            "titleFontSize": 14,
            "titleFontWeight": "bold"
          }
        },
        "color":{
          "value": "#fc7703",
          "condition": {
            "field": "State",
            "selection": "picked",
            "type": "nominal",
            "legend": null
          }
        },
        "size": {
          "value": 100,
          "condition": {"value": 300, "selection": "picked"}
        },
        "opacity": {
          "value": 0.65,
          "condition": {"value": 1, "selection": "picked"}
        },

        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {
            "field": "Firearm Mortality rate",
            "type": "nominal",
            "title": "Firearm Mortality rate"
          },
          {
            "field": "Per capita personal income",
            "type": "nominal",
            "title": "Per capita personal income"
          }
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "#a3070783"},
      "transform": [
        {
          "regression": "Firearm Mortality rate",
          "on": "Per capita personal income",
          "extent": [30000, 80000]
        }
      ],
      "encoding": {
        "x": {"field": "Per capita personal income", "type": "quantitative"},
        "y": {"field": "Firearm Mortality rate", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {
          "regression": "Firearm Mortality rate",
          "on": "Per capita personal income",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "#a3070783",
        "fontSize": 14,
        "fontWeight": "bold",
        "fontStyle": "normal",
        "x": 10,
        "align": "right",
        "y": -20
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
    }
  ]
}